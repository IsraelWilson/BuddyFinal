<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText android:id="@+id/username" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Username"
        android:imeActionId="@+id/login"
        android:imeActionLabel="Sign in"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true" />


    <EditText android:id="@+id/password" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="Sign in"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true" />


    <Button android:id="@+id/login_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:text="Sign in"
        android:textStyle="bold" />

    <Button android:id="@+id/skip_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:text="Skip"
        android:textStyle="bold" />


</LinearLayout>